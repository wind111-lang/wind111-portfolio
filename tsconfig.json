{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],
    "allowSyntheticDefaultImports": true,
    "module": "es6",
    "moduleResolution":"node",
    "sourceMap": true,
    "noImplicitAny": true,
    "jsx": "react",
    "outDir": "./dist/",
    "rootDir":"./src",
    "typeRoots":[
    "node_modules/@types",
    "types"
    ],
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ],
  "exclude":[
  "node_modules"
  ]
}
